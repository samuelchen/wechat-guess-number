/* pages/guess/guess.wxss */
.container {
  padding: 100rpx 0;
}
.section {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.ground {
  border-width: 1px;
  border-color: gray;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.block {
  margin: 5rpx;
}

.number {
  font-family: 'Lucida Sans',
                 'Lucida Sans Regular',
                 'Lucida Grande',
                 'Lucida Sans Unicode',
                 Geneva,
                 Verdana,
                 sans-serif;
  font-size: 3rem;
  text-align: center;
  color: olivedrab;
  background-color: antiquewhite;
  float: left;
  /* border-width: 2rpx;
  border-color: green;  */
  width: 3.5rem;
  height: 3.5rem;
}

.guess {
  background-color: gray;
  color: wheat;
  width: 100%;
}

picker-view-column {
  align-content: center;
  justify-content: space-around;
}

.intro {
  margin-bottom: 10rpx;
}

.message {
  margin-top: 20rpx;
}

.count {
  color: darkorange;
}

.correct {
  color: green;
}

.incorrect {
  color: red;
}
